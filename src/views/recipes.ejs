<main>
    <header>
        <h1>Des nouvelles recettes chaque semaine !</h1>
        <p>Vous surprendre grâce à nos recettes simples, rapides, et bien sûr, pour tous les budgets.</p>
    </header>
    <section>
        <h2>Liste de nos recettes en tout genre</h2>
        <p>Affichage de <%= article.length %> recettes </p>
        <% for( const a of article ) { %>
            <article>
                <h3>
                    <%= a.title %>
                </h3>
                    <img src="<%= a.url %>" alt="<%= a.pictureTitle %>">
                    <a href="/recipes/recipe/<%= a.id %>">Découvrez la recette !</a>
    
            </article>            
            <% } %>
            
        </section>

        <%- include("asideCategory") %>
</main>